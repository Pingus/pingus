{
    "app-id": "org.pingus.Pingus",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "pingus",
    "rename-icon": "pingus",
    "rename-desktop-file": "pingus.desktop",
    "finish-args":
    [
	"--socket=wayland",
	"--socket=x11",
	"--share=ipc",
	"--socket=pulseaudio",
	"--share=network",
	"--device=all"
    ],
    "modules": [
        {
            "name": "jsoncpp",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/open-source-parsers/jsoncpp/archive/1.7.5.tar.gz",
                    "sha256": "4338c6cab8af8dee6cdfd54e6218bd0533785f552c6162bb083f8dd28bf8fbbe"
                }
            ],
            "cleanup": [
                "/include"
            ]
        },
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --prefix=/app --with-libraries=system,filesystem,signals",
                "./b2 install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://dl.bintray.com/boostorg/release/1.66.0/source/boost_1_66_0.tar.bz2",
                    "sha256": "5721818253e6a0989583192f96782c4a98eb6204965316df9f5ad75819225ca9"
                }
            ],
            "cleanup": [
                "/include"
            ]
        },
        {
            "name": "pingus",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/pingus/pingus.git",
                    "branch": "master"
                }
            ]
        }
    ]
}
